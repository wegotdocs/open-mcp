          },
          "zipPassword": {
            "type": "string",
            "minLength": 1,
            "maxLength": 512
          }
        }
      }
    },
    "procedures": {
      "type": "array",
      "items": {
        "required": [
          "patternId",
          "occurDate"
        ],
        "type": "object",
        "properties": {
          "patternId": {
            "type": "string",
            "description": "Id of the technique in the catalog",
            "minLength": 1,
            "maxLength": 128
          },
          "occurDate": {
            "type": "integer",
            "format": "datetime_ms",
            "example": 1640000000000
          },
          "tactic": {
            "type": "string",
            "description": "Name of the tactic, useful if the technique belongs to several tactics",
            "minLength": 1,
            "maxLength": 32
          },
          "description": {
            "type": "string",
            "maxLength": 1048576
          }
        }
      },
      "description": "List of procedures (TTPs) to link the alert to"
