    },
    "change": {
      "description": "BIP44 derivation path - change value",
      "type": "number",
      "example": 0
    },
    "addressIndex": {
      "description": "BIP44 derivation path - index value",
      "type": "number",
      "example": 0
    },
    "compressed": {
