{
  "type": "object",
  "properties": {
    "MessageID": {
      "description": "Message ID",
      "type": "string",
      "pattern": "^[A-Za-z0-9._]{4,23}-[A-Za-z0-9._]{4,14}(-[A-Za-z0-9._]{4,10})?(-[A-Za-z0-9._]{4,10})?$"
    },
    "time": {
      "description": "Pin message for this amount of days",
      "enum": [
        "day",
        "week",
        "month"
      ],
      "type": "string",
      "example": 2592000
    }
  },
  "required": [
    "MessageID"
  ]
}